/**
Dunkelblau: #334960
Mittelblau: #5383C6
Hellblau:
Dunkelgruen: #85D171
Mint: #38a390
Tuerkis: #2EADCA
**/

/**
Navigation
**/
header h1 a {
    height: 50px;
    max-width: 100%;
    width: 302px;
}

header {
    background-color: #fff;
    padding-bottom: 0;
}

header.page4 .hover {
    background-color: #629DEA;
}

header h1 {
    max-width: 30%;
    padding-top: 20px;
}

header .sf-menu a {
    color: #334960;
}

.page2 .sf-menu a, .page4 .sf-menu a, .page5 .sf-menu a {
    color: #fff
}

body {
    background: #fff;
}

.content:after {
    border-color: #fff transparent transparent transparent;
}

#page1 .socials i:hover {
    color: #2AAE96;
}

#page2 .socials1 i:hover {
    color: #334960;
}

.socials1 a:hover {
    opacity: 1;
}

.page1 .men a, .page6 .men5 a {
    color: #fff;
}

#page1 .caption h2 {
    display: inline-block;
    font-size: 50px;
    left: 20px;
    margin-left: 10px;
    padding-left: 20px;
    text-align: left;
}

#page1 .caption.banner.slide_0 h2 {
    background-color: #5383C6;
}

#page1 .caption.banner.slide_1 h2 {
    background-color: rgb(143, 197, 122);
}

#page1 .caption.banner.slide_2 h2 {
    background-color: #32ac97;
}

#page1 .caption.banner.slide_3 h2 {
    background-color: #334960;
}

header.page2 {
    background-color: #629dea;
}

#page2 {
    background-color: #629dea;
}

#page3:after {
    border-color: #629dea transparent transparent transparent;
}

#page2 .box {
    background-color: transparent;
    border: 3px solid #85D171;
    border-bottom-width: 4px;
    border-top-width: 4px;
    padding: 23px 0 24px;
}

#page2 .box img {
    border: 3px solid #85D171;
}

#page2 .socials .fa {
    border: 2px solid #85D171;
    color: #85D171;
}

#page2 h3 em {
    background-color: #334960;
    margin-top: 5px;
}

#page2 .zerogrid .col-1-4 {
    float: inherit;
}

#page2 .socials1 {
    border-color: #85D171;
    min-height: 32px;
}

#page3, header.page3 {
    background-color: #C5E784;
}

#page4:after {
    border-color: #C5E784 transparent transparent transparent;
}

#page3 .slogan h3 {
    color: #334960;
    display: inline-block;
}

#page3 p {
    color: #334960;
}

#page3 .box {
    background-color: #629DEA;
}

#page3 .box p {
    color: #fff;
    font-size: medium;
    margin: 20px;
}

#page3 .box.maxheight1 {
    height: 380px;
}

header.page4 {
    background-color: #334960;
}

#page4 {
    background-color: #334960;
}

#page4 .companies a {
    color: #3f9fc9;
}

#page4 .companies a:hover {
    color: #fff;
}

#page5::after {
    border-color: #334960 transparent transparent transparent;
}

#page5 h3 {
    margin-bottom: 108px;
}

#page5 .companies a {
    color: #334960
}

#page5 .companies a:hover {
    color: #fff
}

#page5 .companies .text1 {
    height: 75px;
}

#page6::after {
    border-color: #3f9fc9 transparent transparent transparent;
}

#page6 h3 {
    background-color: #3f9fc9;
    display: inline;
}

#page6 p {
    color: #334960;
    margin-top: 108px;
}

#page6 .map {
    color: #334960;
}

header.page6 .men5 .hover {
    top: 0;
}

footer .copy {
    color: #3c7f9f;
}

#jobs h3 {
    background-color: #3c7f9f;
}

#jobs .text1 {
    color: #3c7f9f;
    padding-top: 80px;
}

#jobs .text1.formhead {
    color: #fff;
    padding-top: 0;
}

#thankyou .wrap-col {
    color: #3c7f9f;
}

#thankyou .wrap-col h3 {
    color: #3c7f9f;
    margin-bottom: 50px;
}

@media only screen and (max-width: 420px) {
    header h1 {
        max-width: 40px;
        padding-top: 0;
    }

    header .wrap-col h1 a {
        max-width: 30px;
    }

    header h1 a img {
        clip: rect(0, 49px, 27px, 0);
        height: 27px;
        position: absolute;
    }
}
