{% block body_content %}
  <div class="col-full">
    <div class="wrap-col">
      <div class="slogan">
        <h3>{{ page.title }}</h3>
        <div class="text1">
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>

  <div class="clear"></div>
  <div class="map">
    <div class="col-3-8">
      <div class="wrap-col">
       <div class="text1">Address</div>
        <address>
          <dl>
            {% if grav.theme.config.contacts.location %}
              <dt>
                {% for line in grav.theme.config.contacts.location %}
                  {{ line }}<br />
                {% endfor %}
              </dt>
            {% endif %}

            {% if grav.theme.config.contacts.phone %}
                <dd><span class="phone"><i class="fa fa-phone" aria-hidden="true"></i></span>{{  grav.theme.config.contacts.phone }}</dd>
            {% endif %}

            {% if grav.theme.config.contacts.email %}
              <dd><span class="paperplane"><i class="fa fa-paper-plane" aria-hidden="true"></i></span>{{ grav.theme.config.contacts.email }}</a></dd>
            {% endif %}
          </dl>
        </address>
      </div>
    </div>
    <div class="col-1-8">
      <div class="wrap-col">
        <div class="text1 gmap"></div>
      </div>
    </div>
    <div class="col-2-4">
      <div class="wrap-col">
        <div class="text1">Ask a Question</div>

        {% if config.plugins.form.enabled %}
          {% include "forms/form.html.twig" %}
        {% endif %}
      </div>
    </div>

    <div class="clear"></div>
  </div>
{% endblock %}
