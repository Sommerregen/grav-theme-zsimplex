{% set collection = page.collection() %}

{% block body_content %}
  <div class="col-full">
    <div class="wrap-col">
      <div class="slogan">
        <h3>{{ page.title }}</h3>
        <div class="text1">
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>

  {% if collection | length %}
    {% for item in collection %}
      <div class="col-1-4">
        <div class="wrap-col">
          <div class="box maxheight">
            {% set image = item.media.images | first %}
            <img src="{{ image.url }}" alt="{{ item.slug }}" />
            <div class="text1"><a href="#">{{ item.title }}</a></div>

            {{ item.header.subtitle }}

            <div class="socials socials1">
                {% for element in item.header.social_links %}
                  <a class="fa-{{ element.name }}" href="{{ element.link }}">
                    <i class="fa fa-{{ element.name }}" aria-hidden="true"></i>
                  </a>
                {% endfor %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  {% endif %}
{% endblock %}
