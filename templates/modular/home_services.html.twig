{% set collection = page.collection() %}

{% block body_content %}
  <div class="col-full">
    <div class="wrap-col">
      <div class="slogan">
        <h3>{{ page.title }}</h3>
        <div class="text1">
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>

  {% if collection | length %}
    {% for item in collection %}
      <div class="col-1-2">
        <div class="wrap-col hyphenate">
          <div class="box maxheight1">
          <a class="services" href="{{ item.header.iconlink }}" target="_blank">
            <i class="fa fa-{{ item.header.icon }}" aria-hidden="true"></i>
         </a>
            <div class="text1"><a href="{{ item.header.iconlink }}" target="_blank">{{ item.title }}</a></div>

            {{ item.content }}
          </div>
        </div>
      </div>
    {% endfor %}
  {% endif %}
{% endblock %}
