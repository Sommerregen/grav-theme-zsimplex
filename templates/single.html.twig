{% embed 'default.html.twig' %}

    {% set collection = page.collection() %}

    {% block body_content %}
        {% set blog_image = page.media.images|first %}
        <div id="{{ page.slug }}" class="content {% if blog_image %}jobs{% endif %}">
            <div class="zerogrid {% if blog_image %}jobs{% endif %}">
                <div class="col-full">
                    <div class="wrap-col">
                        {% if blog_image %}
                        <div class="flush-top jobs-header-image"
                             style="background-image: url({{ blog_image.url }});">{% endif %}
                            <h2>{{ page.title }}</h2>
                            {% if blog_image %}</div>{% endif %}
                        <div class="text1">
                            {{ page.content }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

{% endembed %}
